<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Auth Activity -->
    <style name="AuthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="colorPrimaryDark">#D7000000</item>
    </style>

    <!-- Nav Drawer Txt -->
    <style name="nav_drawer_txt">
        <item name="android:textColor">@color/colorAccentWhite</item>
    </style>

    <!-- Nav Drawer Title -->
    <style name="nav_drawer_title" parent="nav_drawer_txt">
        <item name="android:textSize">@dimen/nav_drawer_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Nav Drawer Name -->
    <style name="nav_drawer_name" parent="nav_drawer_txt">
        <item name="android:textSize">@dimen/nav_drawer_size_name</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!-- Nav Drawer Email -->
    <style name="nav_drawer_email" parent="nav_drawer_txt">
        <item name="android:textSize">@dimen/nav_drawer_size_email</item>
    </style>

    <!-- Splash Activity -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Auth activity button BASE -->
    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/auth_activity_padding_button</item>
        <item name="android:textSize">@dimen/auth_activity_size_text_button</item>
        <item name="android:textColor">@color/colorAccentWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Auth activity button FACEBOOK -->
    <style name="FacebookButtonStyle" parent="BaseButtonStyle" >
        <item name="android:background">@drawable/button_facebook</item>
        <item name="android:drawableStart">@drawable/ic_facebook</item>
        <item name="android:text">@string/auth_activity_button_facebook</item>
    </style>

    <!-- Auth activity button GOOGLE -->
    <style name="GoogleButtonStyle" parent="BaseButtonStyle" >
        <item name="android:background">@drawable/button_google</item>
        <item name="android:drawableStart">@drawable/ic_google</item>
        <item name="android:text">@string/auth_activity_button_google</item>
    </style>

    <!-- Auth activity button TWITTER -->
    <style name="TwitterButtonStyle" parent="BaseButtonStyle" >
        <item name="android:background">@drawable/button_twitter</item>
        <item name="android:drawableStart">@drawable/ic_twitter_logo</item>
        <item name="android:text">@string/auth_activity_button_twitter</item>
    </style>

    <!-- ITEM LIST RESTAURANT -->

    <!-- Item Restaurant List Name Txt -->
    <style name="item_restaurant_name_txt">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textSize">@dimen/item_restaurant_size_name</item>
    </style>

    <!-- Item Restaurant List Description Base Txt -->
    <style name="item_restaurant_description_base_txt">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccentGrey</item>
        <item name="android:textSize">@dimen/item_restaurant_size_description</item>
    </style>

    <!-- Item Restaurant List Address Txt -->
    <style name="item_restaurant_address_txt" parent="item_restaurant_description_base_txt">
        <item name="android:layout_marginTop">@dimen/item_restaurant_margin_default</item>
    </style>

    <!-- Item Restaurant List Hours Close Txt -->
    <style name="item_restaurant_hours_close_txt" parent="item_restaurant_description_base_txt">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/item_restaurant_margin_default</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Item Restaurant List Hours Open Txt -->
    <style name="item_restaurant_hours_open_txt" parent="item_restaurant_description_base_txt">
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">@dimen/item_restaurant_margin_default</item>
    </style>

    <!-- Item Restaurant List Distance Txt -->
    <style name="item_restaurant_distance_txt">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:textSize">@dimen/item_restaurant_size_distance</item>
        <item name="android:layout_marginEnd">@dimen/item_restaurant_margin_end_distance</item>
    </style>

    <!-- Item Restaurant List Number Rating Txt -->
    <style name="item_restaurant_number_rating_txt">
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:layout_marginBottom">@dimen/item_restaurant_margin_bottom_number_rating</item>
        <item name="android:textSize">@dimen/item_restaurant_size_description</item>
    </style>

    <!-- Item Restaurant List Stars Image -->
    <style name="item_restaurant_stars_image">
        <item name="android:src">@drawable/ic_star</item>
        <item name="android:layout_marginEnd">@dimen/item_restaurant_margin_end_stars</item>
    </style>

    <!-- Item Restaurant List People Rating Image -->
    <style name="item_restaurant_people_rating_image">
        <item name="android:src">@drawable/ic_person_outline_black_24dp</item>
        <item name="android:layout_marginEnd">@dimen/item_restaurant_margin_end_people_rating</item>
    </style>

    <!-- Item Restaurant List Illustration Image -->
    <style name="item_restaurant_illustration_image">
        <item name="android:src">@drawable/meal_picture</item>
        <item name="android:layout_marginEnd">@dimen/item_restaurant_margin_end_illustration</item>
    </style>

    <!-- Details Restaurant -->
    <style name="details_txt_orange">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/details_restaurant_size_txt_orange</item>
    </style>

    <!-- Item Restaurant Workmates Image -->
    <style name="item_list_workmates_image">
        <item name="android:src">@drawable/ic_person_outline_black_24dp</item>
        <item name="android:layout_margin">@dimen/item_list_workmates_margin_image</item>
    </style>

    <!-- Item Restaurant Workmates Choose Txt -->
    <style name="item_list_workmates_choose_txt">
        <item name="android:layout_marginStart">@dimen/item_list_workmates_margin_start_txt</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textSize">@dimen/item_list_workmates_size_txt</item>
    </style>

    <!-- Autocomplete -->
    <string name="autocomplete_hint">"Restaurant"</string>



</resources>